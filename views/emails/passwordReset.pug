extends baseEmail

block content
  p Hi #{firstName},
  p Someone requested a link to change your password. Click the link below to proceed.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password
  p If you didn’t request this, please ignore the email. Your password will stay safe and won’t be changed.